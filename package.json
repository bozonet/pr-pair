{
  "name": "pr-pair",
  "version": "0.1.0",
  "description": "Automatically generate PR checklists based on changed files and their content",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "pr-pair": "./bin/pr-pair.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "prepare": "npm run build",
    "example": "npm run build && node --experimental-modules examples/usage-example.js"
  },
  "keywords": [
    "github",
    "pull-request",
    "checklist",
    "automation",
    "code-review"
  ],
  "author": "bozonet <ocb@plancode.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bozonet/pr-pair.git"
  },
  "homepage": "https://github.com/bozonet/pr-pair#readme",
  "bugs": {
    "url": "https://github.com/bozonet/pr-pair/issues"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin",
    "examples",
    "README.md",
    "LICENSE"
  ]
}